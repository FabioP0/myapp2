<div class = "row">
    <div class = "col-md-6">
        <%= simple_form_for @person do |f| %>
            <%= f.input :identificacion %>
            <%= f.input :nombre %>
            <%= f.input :apellido %>
            <%= f.input :edad %>
            <%= f.input :avatar %>
            <button type="button" class="btn btn-secondary"><%= f.button :submit %></button>
        <% end %>
    </div>
</div>